<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1dede">

    <TextView
        android:id="@+id/idTextView"
        android:text="Testing"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@+id/idTextView"
        android:id="@+id/buttonPopupOutdoorID"
        android:layout_width="374dp"
        android:layout_height="51dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_design"
        android:drawableEnd="@drawable/dropdown_icon"
        android:drawableStart="@drawable/address_pin_icon"
        android:text="@string/uttara"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
         />

    <ListView
        android:layout_below="@+id/buttonPopupOutdoorID"
        android:id="@+id/listViewOutdoorServiceID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
         />


</RelativeLayout>